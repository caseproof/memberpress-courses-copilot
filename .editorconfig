# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# PHP files
[*.php]
indent_style = tab
indent_size = 4

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json and composer.json
[{package.json,composer.json}]
indent_style = space
indent_size = 2

# WordPress specific files
[*.pot]
charset = utf-8

# Configuration files
[{.babelrc,.stylelintrc,.eslintrc}]
indent_style = space
indent_size = 2