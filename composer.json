{
    "name": "caseproof/memberpress-courses-copilot",
    "description": "AI-powered course creation copilot for MemberPress Courses",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "CaseProof",
            "email": "support@caseproof.com"
        }
    ],
    "keywords": [
        "wordpress",
        "memberpress",
        "courses",
        "ai",
        "copilot",
        "elearning"
    ],
    "homepage": "https://memberpress.com",
    "support": {
        "issues": "https://memberpress.com/support/"
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "caseproof/caseproof-wp-coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MemberPressCoursesCopilot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MemberPressCoursesCopilot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": [
            "phpcs --standard=CaseproofWP src/ --extensions=php"
        ],
        "cs-fix": [
            "phpcbf --standard=CaseproofWP src/ --extensions=php"
        ],
        "test": [
            "phpunit"
        ],
        "test-coverage": [
            "phpunit --coverage-html coverage/"
        ]
    },
    "scripts-descriptions": {
        "cs-check": "Run coding standards check",
        "cs-fix": "Fix coding standards violations",
        "test": "Run PHPUnit tests",
        "test-coverage": "Run PHPUnit tests with coverage report"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}