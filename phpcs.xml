<?xml version="1.0"?>
<ruleset name="MemberPressCoursesCopilot">
    <description>MemberPress Courses Copilot coding standards based on Caseproof-WP-Standard</description>

    <!-- What to scan -->
    <file>.</file>
    
    <!-- Exclude paths -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/assets/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>/Sites/*</exclude-pattern>
    <exclude-pattern>/logs/*</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="./"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- Use WordPress Coding Standards as base following Caseproof guidelines -->
    <rule ref="WordPress">
        <!-- Allow camelCase for class methods per our coding guidelines -->
        <exclude name="WordPress.NamingConventions.ValidFunctionName.MethodNameInvalid"/>
        <!-- Allow short array syntax per Caseproof standard -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
    </rule>
    
    <!-- Additional WordPress rules -->
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress-Docs"/>
    
    <!-- PSR compliance per Caseproof standard -->
    <rule ref="PSR12"/>
    
    <!-- PHP compatibility -->
    <rule ref="PHPCompatibilityWP"/>
    <config name="testVersion" value="8.0-"/>

    <!-- Text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="memberpress-courses-copilot"/>
            </property>
        </properties>
    </rule>

    <!-- Prefixes for global functions/variables -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="mpcc"/>
                <element value="memberpress_courses_copilot"/>
            </property>
        </properties>
    </rule>

    <!-- Hook naming prefix -->
    <rule ref="WordPress.NamingConventions.ValidHookName">
        <properties>
            <property name="additionalWordDelimiters" value="-_"/>
        </properties>
    </rule>


    <!-- Custom overrides for this plugin -->
    <rule ref="WordPress.PHP.YodaConditions">
        <severity>0</severity>
    </rule>
</ruleset>