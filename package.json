{
  "name": "memberpress-courses-copilot",
  "version": "1.0.0",
  "description": "AI-powered course creation copilot for MemberPress Courses",
  "private": true,
  "scripts": {
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:fix": "npm run lint:css -- --fix && npm run lint:js -- --fix",
    "format": "prettier --write 'assets/**/*.{js,css}'",
    "test": "jest --config=tests/JavaScript/jest.config.js",
    "test:watch": "jest --config=tests/JavaScript/jest.config.js --watch",
    "test:coverage": "jest --config=tests/JavaScript/jest.config.js --coverage",
    "test:php": "vendor/bin/phpunit --configuration phpunit.xml",
    "test:all": "npm run test:php && npm run test",
    "test:ai-chat": "node tests/test-ai-chat-integration.js",
    "diagnostic": "node tests/diagnostic-check.js",
    "test:course-edit": "node tests/course-edit-page-diagnostic.js"
  },
  "keywords": [
    "wordpress",
    "memberpress",
    "courses",
    "ai",
    "copilot",
    "elearning"
  ],
  "author": "CaseProof",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-react": "^7.33.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^3.0.0",
    "puppeteer": "^22.15.0",
    "rimraf": "^5.0.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
